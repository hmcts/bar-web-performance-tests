#!groovy

properties([
        pipelineTriggers([cron('00 21 * * *')]),
        parameters([
                string(name: 'ENVIRONMENT', defaultValue: 'perftest', description: 'Environment to test'),
                string(name: 'URL_TO_TEST', defaultValue: 'https://bar-web-aat.service.core-compute-aat.internal', description: 'The URL you want to run these tests against'),
                string(name: 'IDAM_URL', defaultValue: 'https://idam-web-public.aat.platform.hmcts.net', description: 'The IDAM API Url'),
                string(name: 'BaseURL', defaultValue: 'https://bar-web-aat.service.core-compute-aat.internal', description: 'The professional reference data Url')
        ])
])



@Library("Infrastructure") 


def product = "bar"
def component = "bar-ui"

withNightlyPipeline("java", product, component) {
    env.TEST_URL = 'https://bar-web-aat.service.core-compute-aat.internal'
    env.BaseURL = 'https://bar-web-aat.service.core-compute-aat.internal'
    env.IDAM_URL = 'https://idam-web-public.aat.platform.hmcts.net'


    enablePerformanceTest()

    after('performanceTest') {
        steps.archiveArtifacts allowEmptyArchive: true, artifacts: 'functional-output/**/*'
    }

    enableSlackNotifications('#bar-nightly-builds')

}
